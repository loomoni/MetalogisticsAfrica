<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--    Invoice Template -->
    <template id="invoice_print_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page" style="margin-top: 0;">
                    <div class="content">
                        <table style="width: 95%; margin-left: 45px; margin-bottom: 30px"
                               class="table table-condensed">
                            <tr>
                                <td style="text-align: right;" colspan="3">
                                    <div class="text-right pb-3 border-bottom mb-4">
                                        <img t-if="o.company_id.logo"
                                             style="max-height:110px; max-width: 100%; width:auto"
                                             t-att-src="'data:image/png;base64,'+o.company_id.logo.decode('utf-8')"
                                             alt="Company Logo"/>
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <table style="width:95%; margin-left: 45px;"
                               class="table table-condensed">
                            <tr style="margin-bottom: 20px">

                            </tr>

                            <tr></tr>
                            <tr>
                                <td style="font-size: 20px">
                                    <span>INVOICE</span>
                                </td>
                                <td style="text-align: left">
                                    <span>
                                        <strong>Invoice Date</strong>
                                    </span>
                                </td>
                                <td style="text-align: right;">
                                    <span>Metalogistics Africa Limited</span>
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td style="text-align: left">
                                    <span>17 Aug 2023</span>
                                </td>
                                <td style="text-align: right;">
                                    <span>Attention: Country Manager</span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span>REDINGTON TANZANIA LIMITED</span>
                                </td>
                                <td style="text-align: left">
                                    <span>
                                        <strong>Invoice Number</strong>
                                    </span>
                                </td>
                                <td style="text-align: right">
                                    <span>PO Box 10064, Keko Mwanga</span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span>Attention: REDINGTON TANZANIA LIMITED</span>
                                </td>
                                <td style="text-align: left">
                                    <span>MA-0089</span>
                                </td>
                                <td style="text-align: right">
                                    <span>TEMEKE DAR ES SALAAM</span>
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td style="text-align: right">
                                    <span>TANZANIA</span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span>UNITED NATIONS ROAD</span>
                                </td>
                                <td>
                                    <span>
                                        <strong>Due Date: 01 Sep 2023</strong>
                                    </span>
                                </td>
                                <td style="text-align: right">
                                    <span>TIN:
                                        <strong>155-567-104</strong>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span>PO BOX 1559</span>
                                </td>
                                <td></td>
                                <td style="text-align: right">
                                    <span>VRN:
                                        <strong>40-311548-F</strong>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span>SWISS TOWER</span>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    <span>DAR ES SALAAM</span>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    <span>TANZANIA</span>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    <span>TIN: 108-926-023 VRN: 40010354C</span>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                        </table>

                        <table style="width: 95%; margin-top: 18px; border-collapse: collapse; margin-left: 45px; border: 1px solid #000;">
                            <thead>
                                <tr style="font-size: 18px;">
                                    <th style="border: 1px solid #000; padding: 8px; text-align: left; background-color: #f2f2f2;">
                                        Description
                                    </th>
                                    <th style="border: 1px solid #000; padding: 8px; text-align: right; background-color: #f2f2f2;">
                                        Quantity
                                    </th>
                                    <th style="border: 1px solid #000; padding: 8px; text-align: right; background-color: #f2f2f2;">
                                        Unit Price
                                    </th>
                                    <th style="border: 1px solid #000;   padding: 8px; text-align: right; background-color: #f2f2f2;">
                                        Tax
                                    </th>
                                    <th style="border: 1px solid #000;  padding: 8px; text-align: right; background-color: #f2f2f2;">
                                        Amount
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="odd_even" t-value="0"/>
                                <t t-foreach="o.invoice_line_ids" t-as="line">
                                    <t t-set="odd_even" t-value="1 - odd_even"/>
                                    <tr>

                                        <t t-if="odd_even == 1">
                                            <td style="border-right: 1px solid #000; padding: 8px; text-align: left; background-color: #ffffff;">

                                                <span t-field="line.product_id.name"/>
                                            </td>
                                            <td style="border-right: 1px solid #000; padding: 8px; text-align: right; background-color: #ffffff;">
                                                <span t-esc="line.quantity"/>
                                            </td>
                                            <td style="border-right: 1px solid #000; padding: 8px; text-align: right; background-color: #ffffff;">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td style="border-right: 1px solid #000;padding: 8px; text-align: right; background-color:  #f2f2f2;">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td style="border-right: 1px solid #000; padding: 8px; text-align: right; background-color: #ffffff;">
                                                <span t-field="line.price_total"/>
                                            </td>
                                        </t>
                                        <t t-if="odd_even == 0">
                                            <td style="border-right: 1px solid #000; padding: 8px; text-align: left; background-color: #f2f2f2;">
                                                <span t-field="line.product_id.name"/>
                                            </td>
                                            <td style="border-right: 1px solid #000; padding: 8px; text-align: right; background-color:  #f2f2f2;">
                                                <span t-esc="line.quantity"/>
                                            </td>
                                            <td style="border-right: 1px solid #000;padding: 8px; text-align: right; background-color:  #f2f2f2;">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td style="border-right: 1px solid #000;padding: 8px; text-align: right; background-color:  #f2f2f2;">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td style="border-right: 1px solid #000; padding: 8px; text-align: right; background-color:  #f2f2f2;">
                                                <span t-field="line.price_total"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>

                            </tbody>
                        </table>
                        <table style="width: 100%; border-collapse: collapse; margin-top: 18px">
                            <tr>
                                <td style="padding: 8px; text-align: left; background-color: #ffffff;">
                                </td>
                                <td style="width: 10%; padding: 8px; text-align: left; background-color: #ffffff;">
                                </td>
                                <td style="width: 8%; padding: 8px; text-align: left; background-color: #ffffff;">
                                </td>
                                <td style="border-left: 1px solid #000; border-right: 1px solid #000; border-top: 1px solid #000; width: 16%; padding: 8px; text-align: right; background-color: #f2f2f2;">
                                    Subtotal
                                </td>
                                <td style="border-top: 1px solid #000; border-right: 1px solid #000; width: 18%; padding: 8px; text-align: right; background-color: #f2f2f2;">
                                    <span t-field="o.amount_untaxed"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px; text-align: left; background-color: #ffffff;">
                                </td>
                                <td style="width: 10%; padding: 8px; text-align: left; background-color: #ffffff;">
                                </td>
                                <td style="width: 8%; padding: 8px; text-align: left; background-color: #ffffff;">
                                </td>
                                <td style="border-left: 1px solid #000; border-right: 1px solid #000; border-top: 1px solid #000; width: 16%; padding: 8px; text-align: right; background-color: #f2f2f2;">
                                    VAT 18%
                                </td>
                                <td style="border-top: 1px solid #000; border-right: 1px solid #000; width: 18%; padding: 8px; text-align: right; background-color: #f2f2f2;">
                                    <span t-field="o.amount_tax"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px; text-align: left; background-color: #ffffff;">
                                </td>
                                <td style="width: 10%; padding: 8px; text-align: left; background-color: #ffffff;">
                                </td>
                                <td style="width: 8%; padding: 8px; text-align: left; background-color: #ffffff;">
                                </td>
                                <td style="border-left: 1px solid #000; border-right: 1px solid #000; border-top: 1px solid #000; border-bottom: 1px solid #000; width: 16%; padding: 8px; text-align: right; background-color: #c2c0c0;">
                                    <strong>Invoice Total</strong>
                                </td>
                                <td style="width: 18%; padding: 8px; border-right: 1px solid #000; border-top: 1px solid #000; border-bottom: 1px solid #000; text-align: right; background-color: #c2c0c0;">
                                    <strong>
                                        <span t-field="o.amount_total"/>
                                    </strong>
                                </td>

                            </tr>
                            <t t-if="o.get_payment_dates()">
                                <tr>
                                    <td style="padding: 8px; text-align: left; background-color: #ffffff;">
                                    </td>
                                    <td style="width: 10%; padding: 8px; text-align: left; background-color: #ffffff;">

                                    </td>
                                    <td style="width: 8%; padding: 8px; text-align: left; background-color: #ffffff;">

                                    </td>
                                    <td style="font-size: 15px; border-left: 1px solid #000; border-right: 1px solid #000; border-top: 1px solid #000; border-bottom: 1px solid #000; width: 18%; padding: 8px; text-align: right; background-color: #f2f2f2;">
                                        <t t-foreach="o.get_payment_dates()" t-as="payment_date">
                                            <div style="font-style: italic; text-align: right;">
                                                <p>Paid on
                                                    <t t-esc="payment_date.strftime('%d/%m/%Y')"/>
                                                </p>
                                            </div>
                                        </t>
                                    </td>
                                    <td style="font-size: 15px; width: 18%; padding: 8px; border-right: 1px solid #000; border-top: 1px solid #000; border-bottom: 1px solid #000; text-align: right; background-color: #f2f2f2;">
                                        <t t-foreach="o.get_payment_amount()" t-as="payment_amount">
                                            <div style="text-align: right;">
                                                <p>
                                                    <t t-esc="o.format_payment_amount(payment_amount)"/>
                                                    TSh
                                                </p>
                                            </div>
                                        </t>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px; text-align: left; background-color: #ffffff;">
                                    </td>
                                    <td style="width: 10%; padding: 8px; text-align: left; background-color: #ffffff;">

                                    </td>
                                    <td style="width: 8%; padding: 8px; text-align: left; background-color: #ffffff;">

                                    </td>
                                    <td style="border-left: 1px solid #000; border-right: 1px solid #000; border-top: 1px solid #000; border-bottom: 1px solid #000; width: 16%; padding: 8px; text-align: right; background-color: #c2c0c0;">
                                        <strong>Amount Due</strong>
                                    </td>
                                    <td style="width: 18%; padding: 8px; border-right: 1px solid #000; border-top: 1px solid #000; border-bottom: 1px solid #000; text-align: right; background-color: #c2c0c0;">
                                        <strong>
                                            <span t-field="o.residual"/>
                                        </strong>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>